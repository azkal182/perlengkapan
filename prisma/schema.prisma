generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model Perlengkapan {
    id        String      @id @default(uuid())
    name      String
    kebutuhan Kebutuhan[]
}

model Kebutuhan {
    id             String        @id @default(uuid())
    name           String
    jumlah         Int
    perlengkapan   Perlengkapan? @relation(fields: [perlengkapanId], references: [id])
    perlengkapanId String?
}
